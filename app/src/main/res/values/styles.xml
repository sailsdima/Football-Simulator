<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="mainThemeBackground">
        <item name="android:background">@drawable/img_field</item>
    </style>

    <style name="textViewBogBlack">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">5dp</item>

        <item name="android:background">@drawable/shape_edit_text</item>
    </style>

    <style name="textViewBlackBoldMiddle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="textViewManagersName">
        <item name="android:textSize">20sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000829</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="textViewTeamName" parent="textViewManagersName">
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="textViewManagersValue" parent="textViewBlackBoldMiddle">
        <item name="android:textStyle">normal</item>
        <item name="android:paddingLeft">5dp</item>
    </style>

    <style name="textViewWelcomeMessage">
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textColor">#194673</item>
    </style>
    <style name="textViewWelcomeMessageName" parent="textViewWelcomeMessage">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textViewNewManagerValue">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#003870</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="buttonGreen">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">26sp</item>
        <item name="android:background">@drawable/selector_button_shape</item>
        <item name="android:shadowColor">#191EA8</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="buttonCircle">
        <item name="android:background">@drawable/selector_circle_button</item>
    </style>

    <style name="buttonNext" parent="buttonCircle">
        <item name="android:src">@mipmap/ic_button_next</item>
    </style>

    <style name="editTextName">
        <item name="android:paddingRight">38dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">#04212d</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/shape_edit_text</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="editTextInputValues">
        <item name="android:paddingRight">38dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#002939</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="recycleViewItem">
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:background">@drawable/selector_item_background</item>
    </style>


    <style name="fragment_team_selection_style">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:background">@drawable/shape_transparent</item>
    </style>

    <style name="recycleManagersHeader">
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="recycleViewItemPlayer">
        <item name="android:textColor">#f2f2f2</item>
        <item name="android:background">#767880</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
    </style>

    <style name="recycleViewPlayerTop">
        <item name="android:background">#31414f</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="textViewSquard">
        <item name="android:textColor">#e2e2e2</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="gridViewHeaders">
        <item name="android:background">#30404d</item>
        <item name="android:textColor">#f4f3f3</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="gridViewItems" parent="gridViewHeaders">
        <item name="android:background">#a8acb4</item>
        <item name="android:textColor">#060606</item>
    </style>

    <style name="ratingBar">
        <item name="colorControlNormal">#3b3700</item>
        <item name="colorControlActivated">#ffd700</item>
    </style>

    <style name="background_player">
        <item name="android:background">@drawable/layer_list_players_background</item>
    </style>

    <style name="textViewPlayerProperitiesNames">
        <item name="android:textSize">18dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textViewPlayerProperities" parent="textViewPlayerProperitiesNames">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="MyCardViewStyle" parent="CardView">
        <item name="cardBackgroundColor">#f7f7f7</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="android:layout_marginBottom">1dp</item>
    </style>

    <style name="buttonMainMenu">

    </style>
</resources>
